package practica1.pkg2;
import javax.swing.JOptionPane;

/**
 *
 * @author eliec
 */
public class Practica12 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
         double temp = 0;
         temp = Double.parseDouble(JOptionPane.showInputDialog(
                 "Digite la temperatura: "));
         if (temp <= 10) {
             JOptionPane.showMessageDialog(null, 
                     "La temperatura es de: "+temp+"\n"
                             + "Por lo tanto el clima es Frio.");       
        }
         if (10 < temp && temp <= 20) {
            JOptionPane.showMessageDialog(null, 
                     "La temperatura es de: "+temp+"\n"
                             + "Por lo tanto el clima es Nublado.");
        }
         if (20 < temp && temp <= 30) {
            JOptionPane.showMessageDialog(null, 
                     "La temperatura es de: "+temp+"\n"
                             + "Por lo tanto el clima es Caluroso.");
        }
         if (temp > 30) {
            JOptionPane.showMessageDialog(null, 
                     "La temperatura es de: "+temp+"\n"
                             + "Por lo tanto el clima es Tropical.");
        }
         
         
         
    }
    
}
